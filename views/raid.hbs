<h3>{{raid.note}} - {{raid.when}}</h3>
<div class="row">
  <div class="col-2 font-weight-bold">Points</div>
  <div class="col-3">{{raid.value}}</div>
</div>
<div class="row">
  <div class="col-2 font-weight-bold">RA?</div>
  <div class="col-3">{{raid.isAttendance}}</div>
</div>
<div class="row">
  <div class="col-2 font-weight-bold">Spent / Earned</div>
  <div class="col-1" style="color:red;">{{raid.spent}}</div>
  <div class="col-1" style="color:green">{{raid.earned}}</div>
</div>
<h4>Members</h4>
<div class="row">
  {{#each raid.Users}}
    <div class="col-2"><a href="/roster/{{this.id}}">{{this.characterName}}</a></div>
  {{/each}}
</div>
<h4>Items</h4>
<div class="row">
  <div class="col-3 font-weight-bold">Name</div>
  <div class="col font-weight-bold">Cost</div>
</div>
{{#each raid.Items}}
  <div class="row">
    <div class="col-3"><a href="/items/{{this.id}}">{{this.name}}</a></div>
    <div class="col">{{this.UserItemPurchase.value}}</div>
  </div>
{{/each}}